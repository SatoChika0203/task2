<!--一覧画面-->

<h1>Books</h1>

<%= @books.each do |book| %>
<!--@books.eachでBookレコードの数だけ繰り返し処理、book変数に格納-->

<p>Title</p>
<span><%= book.title %></span>

<p>Body</p>
<span><%= book.body %></span>

<span><%= link_to "Show", show_book_path(book.id) %></span>
<span><%= link_to "Edit", edit_book_path(book.id) %></span>
<p>Destroy</p>

<% end %>

<h2>New Book</h2>

<%= form_with model: @book,url: '/books',method: :post do |f| %>  <!--Bookモデルの情報をもとに新しくオブジェクトを作成-->
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Body</p>
 <%= f.text_area :body %>
 
 <%= f.submit 'Create Book' %>
<% end %>
